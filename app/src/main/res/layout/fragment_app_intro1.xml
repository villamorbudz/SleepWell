<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppIntro.AppIntro1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/fragment_roundedbox"
        android:paddingHorizontal="40dp"
        android:paddingVertical="54dp"
        android:layout_alignParentBottom="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/introTitle1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/app_intro_welcome_to_sleepwell"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:fontFamily="@font/montserrat_bold"/>

            <TextView
                android:id="@+id/introSubtitleText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="0"
                android:text="Your ultimate personal guide for restful nights."
                android:textAlignment="center"
                android:textColor="@color/text_white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_regular"/>

        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/skipIntroBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:text="@string/skip"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next"
                android:textColor="@color/white" />
        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/skipIntroBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/button_second"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/skip"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textAllCaps="true" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/button_main"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Next"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:textAllCaps="true" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>